mixin post-event(obj)
  article.post-event: a(href='#')
    .post-event__image
      +jpg(obj.img)
    .post-event__inner
      .post-event__time
        svg.post-event__time-shape(version='1.1', baseprofile='tiny', xmlns='http://www.w3.org/2000/svg', x='0px', y='0px', width='127px', height='118px', viewbox='0 0 127 118', xml:space='preserve', preserveAspectRatio='none')
          polygon(points='0,0 112.5,0 127,59 112.833,118 0,118 ')

        span.post-event-time__big=obj.time[0]
        span.post-event-time__small=obj.time[1]
      .post-event__body
        p.post-event__title=obj.title
        ul.list
          li.object-inline
            span.icon.icon-xxs.fl-bigmug-line-big104
            span=obj.location
          li.object-inline
            span.icon.icon-xxs.fl-bigmug-line-event6
            span=obj.eventTime